<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CatalogFilms</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <script src="~/js/Classes.js"></script>
</head>
<body>
<header>
    <h1><a asp-controller="Home" asp-action="Index">Каталог фільмів</a></h1>
    <nav>
        <ul>
            <li id="activePage"><a asp-controller="Film" asp-action="Index">Фільми</a></li>
            <li><a asp-controller="Category" asp-action="Index">Категорії</a></li>
        </ul>
    </nav>
</header>
<main>
    @RenderBody()
</main>

<footer>
    <div class="container">
        &copy; 2024 - CatalogFilms - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://kit.fontawesome.com/ea97496765.js" crossorigin="anonymous"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>